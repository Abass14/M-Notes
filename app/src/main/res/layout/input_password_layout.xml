<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/inputPasswordTxt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:hint="Enter your Password"
        android:paddingHorizontal="10dp"/>
    <TextView
        android:id="@+id/inputPasswordErrorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_medium"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputPasswordTxt"
        app:layout_constraintBottom_toTopOf="@id/inputPasswordErrorTxt"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/inputPasswordBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/inputPasswordErrorTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:text="Go in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"/>


</androidx.constraintlayout.widget.ConstraintLayout>