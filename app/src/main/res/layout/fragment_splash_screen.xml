<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ash"
    tools:context=".ui.SplashScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/splash_logo"/>

    <TextView
        android:id="@+id/mTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:text="M "
        android:fontFamily="@font/aclonica"
        android:textColor="@color/blue_dark"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Notes"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@id/mTxt"
        app:layout_constraintStart_toEndOf="@id/mTxt"
        app:layout_constraintTop_toTopOf="@id/mTxt" />

    <TextView
        android:id="@+id/byTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/AbassTxt"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/AbassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Abass]"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/red_medium"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>