<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/dialogMsgTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Would you like to set a password for your Archived Notes?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/montserrat"
        android:layout_marginHorizontal="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogMsgTxt"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text"
        android:inputType="textPassword"
        android:hint="Set a Password..."
        android:padding="10dp"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edit_text"
        android:inputType="textPassword"
        android:hint="Confirm Password..."
        android:padding="10dp"
        android:layout_marginVertical="10dp"/>
    <TextView
        android:id="@+id/setPasswordErrorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordInput"
        app:layout_constraintBottom_toTopOf="@id/setPasswordBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/red_medium"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setPasswordBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/button"
        android:text="Set Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"/>


</androidx.constraintlayout.widget.ConstraintLayout>